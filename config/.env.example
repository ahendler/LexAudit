# LLM Configuration
# Provider options: openai, google/gemini, anthropic, ollama
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.5-flash
LLM_TEMPERATURE=0

# API Keys
# OPENAI_API_KEY=your-key-here
GOOGLE_API_KEY=api_key
SERPAPI_API_KEY=serpapi_key
OPENAI_API_KEY=api_key 


# Extraction (detector/linker) settings
# For list/dict fields, pydantic expects JSON when read from env.
# Use JSON array for LINKER_CMD (not a plain space-separated string):
LINKER_CMD=["docker","run","-i","--rm","lexmlbr/lexml-linker:latest","/usr/bin/linkertool"]
# Linker context (e.g., federal, estadual)
LINKER_CONTEXT=federal
# Linker timeout in seconds (empty = no timeout)
LINKER_TIMEOUT=3

# Logging level
LOGGING_LEVEL=INFO

# Citation Processing Limit (for debugging)
# Limits the number of citations processed in extraction and resolution stages
# to minimize API calls during development. Leave unset or use -1 to process all.
CITATIONS_TO_PROCESS=1

VALIDATION_CONFIDENCE_THRESHOLD=0.75